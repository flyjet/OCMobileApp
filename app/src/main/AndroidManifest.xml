<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.sjsu.qi.onlinecommunity" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityLogin"
            android:label="@string/title_activity_login"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".ActivitySignup"
            android:label="@string/title_activity_signup"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".ActivityCategory"
            android:label="@string/title_activity_category"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".ActivityMyCourse"
            android:label="@string/title_activity_my_course"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".ActivityCourseContainer"
            android:label="@string/title_activity_course_container"
            android:theme="@style/CustomActionBarTheme" >

            <!-- to identify this activity as "searchable" -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ActivityCourseIntro"
            android:label="@string/title_activity_course_intro"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".ActivityInstructorIntro"
            android:label="@string/title_activity_instructor_intro"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".ActivityCourseDetail"
            android:label="@string/title_activity_course_detail"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".ActivityVideoPlayer"
            android:label="@string/title_activity_video_player"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".ActivityUserProfile"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name=".ActivityUserEditProfile"
            android:label="@string/title_activity_activity_user_edit_profile" >
        </activity>
    </application>

</manifest>
